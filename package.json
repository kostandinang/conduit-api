{
  "name": "conduit",
  "version": "1.0.0",
  "description": "Multi-channel automation workflow engine with AI-powered responses",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node scripts/check-env.js && tsx watch src/index.ts",
    "build": "tsc",
    "start": "node scripts/check-env.js && node dist/index.js",
    "worker": "node scripts/check-env.js && tsx src/workers/index.ts",
    "setup": "node scripts/setup.js",
    "validate-db": "node scripts/validate-database-url.js",
    "lint": "biome lint src/",
    "lint:fix": "biome lint src/ --write",
    "format": "biome format src/ --write",
    "format:check": "biome format src/",
    "check": "biome check src/",
    "check:fix": "biome check src/ --write"
  },
  "keywords": [
    "automation",
    "workflow",
    "multi-channel",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg-boss": "^9.0.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}